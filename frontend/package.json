{
  "name": "tp05-web",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "ng serve --host 0.0.0.0 --port 4200",
    "build": "ng build",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "lint": "echo \"ng lint no está configurado en este proyecto; usamos SonarCloud para análisis estático del frontend\"",
    "build:qa": "ng build --configuration=qa",
    "build:prod": "ng build --configuration=production",
    "e2e": "start-server-and-test start http://localhost:4200 cy:run",
    "cy:run": "cypress run --browser chrome --headless"
  },
  "dependencies": {
    "@angular/animations": "18.2.0",
    "@angular/common": "18.2.0",
    "@angular/compiler": "18.2.0",
    "@angular/core": "18.2.0",
    "@angular/forms": "18.2.0",
    "@angular/platform-browser": "18.2.0",
    "@angular/platform-browser-dynamic": "18.2.0",
    "@angular/router": "18.2.0",
    "rxjs": "7.8.1",
    "tslib": "2.6.3",
    "zone.js": "0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "18.2.4",
    "@angular/cli": "18.2.4",
    "@angular/compiler-cli": "18.2.0",
    "typescript": "5.5.4",
    "@types/jasmine": "^5.1.0",
    "jasmine-core": "^5.2.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "cypress": "^13.15.0",
    "start-server-and-test": "^2.0.0"
  }
}
